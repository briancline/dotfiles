#!/bin/bash

set -o errexit

excludes=(
    "dev/pub/**"
    "dev/pubarchive/**"
    "*.pyc"
    "__pycache__"
    ".env*/**"
    ".venv*"
    ".cache"
    "*.o"
    "*.a"
    "a.out"
    "*.bin"
    "*.o.d"
    "nohup.out"
    "build/CMakeFiles"
    "*.qcow2"
    "*.vdi"
    "*.vmdk"
    "*.img"
    "*.ima"
    "*.flp"
    "*.box"
    "*.iso"
    "*.cdr"
    "*.dmg"
    "**/kernel"
    "**/initramfs"
    "**/rootfs.img.gz"
    "/.local/share/containers"
    "/.local/share/gnome-boxes"
    "/.local/share/JetBrains"
    "/.local/share/libvirt/images"
    "/.local/share/Trash"
    "/.local/share/uv/"
    "/.pyenv"
    ".DS_Store"
    "**/qemu-system-*"
)

MS="$(date +%Y-%m)"
DS="$(date +%Y-%m-%d)"
DTS="$(date +%Y%m%d_%H%M%S)"

SRC_DIR="$1"
DIR_PARENT="$(dirname "${SRC_DIR}")"
DIR_NAME="$(basename "${SRC_DIR}")"
DEST_FILE="${HOME}/backups/${MS}/${DIR_NAME}__${DTS}.tgz"
DEST_PARENT="$(dirname "${DEST_FILE}")"
TAR_DEST_FILE="${DEST_FILE}"

mkdir -p "${DEST_PARENT}"

if [ "$2" = "--dry-run" ]; then
    TAR_DEST_FILE="/dev/null"
fi

set -o xtrace
tar \
    -czv \
    --totals \
    --ignore-case \
    --acls \
    --xattrs \
    --exclude-from <( printf "%s\n" "${excludes[@]}" ) \
    -f "${TAR_DEST_FILE}" \
    -C "${DIR_PARENT}" \
    "${DIR_NAME}"

set +o xtrace

if [ "$2" = "--dry-run" ]; then
    echo "Dest file: ${DEST_FILE}"
else
    ls -lh "${DEST_FILE}"
fi
